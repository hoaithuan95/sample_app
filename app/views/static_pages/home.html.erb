<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("welcome") %></h1>
    <h2>
      <%= t(".text1") %>
      <%= link_to t(".link_name"), t(".link")%> <%= t(".text2") %>
    </h2>
     <%= link_to t(".text3"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails1.png", alt: "Rails logo"), t(".link1") %>
<% end %>

