<% provide :title, t("users.edit.title") %>
<h1><%= t("users.edit.update") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label t("users.new.name1") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t("users.new.name2") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("users.new.name3") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t("users.new.name4"), t("users.new.text1") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.edit.save"), class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.change"), t("users.edit.link_change"), target: "_blank" %>
    </div>
  </div>
</div>
